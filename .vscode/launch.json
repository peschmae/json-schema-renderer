    "version": "0.2.0",
    "configurations": [
        {
            "name": "Write to stdout",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "values.schema.json"
            ]
        },
        {
            "name": "Write markdown to stdout",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "values.schema.json",
                "-f markdown"
            ]
        },
        {
            "name": "Write to file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "values.schema.json",
                "-t ArgoCD Helm Values",
                "-o rendered.adoc"
            ]
        },
        {
            "name": "Write markdown to file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "values.schema.json",
                "-o rendered.md",
                "-f markdown"
            ]
        }
    ]
}
